#!/usr/bin/env node

var app = require('../scripts/app');
var http = require('http');
var open = require('open');

var addr = 'localhost'
var port = '3000';

var retryNo = 1;
var server = undefined;
app.set('port', port);


function tryConnect() {
  server = http.createServer(app);
  server.listen(port, addr);
  server.on('error', onError);
  server.on('listening', onListening);
}
tryConnect()

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }
  switch (error.code) {
    case 'EACCES':
      console.error(addr+':'+port+' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(addr+':'+port+' is already in use');
      if (retryNo >= 3) {
        process.exit(1);
      }
      console.error('sleeping a while and retrying...');
      retryNo++;
      setTimeout(tryConnect, 5000)      
      break;
    default:
      throw error;
  }
}

function onListening() {
  var listening = server.address();
  console.log('listening on ' + listening.address+':'+listening.port);
  open('http://localhost:'+listening.port)
}

